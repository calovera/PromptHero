modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["imagemagick"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Extension"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Demo Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Extension"

[[workflows.workflow]]
name = "Install Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Test Extension"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"PromptHero Extension Testing Suite\" && echo \"\" && echo \"‚úÖ Extension built successfully\" && echo \"üîë API key configured\" && echo \"üìÅ Extension files ready in ./dist/\" && echo \"\" && echo \"Ready for Chrome testing:\" && echo \"1. Open chrome://extensions/\" && echo \"2. Enable Developer mode\" && echo \"3. Load unpacked from ./dist/\" && echo \"\" && ls -la dist/"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Web Demo Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web-demo && node server.cjs"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Build Extension"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x build-esbuild.js && node --max-old-space-size=512 build-esbuild.js"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80
